<div class="container">
  <div class="page-header">
    <h1>Upload Your Invention</h1>
  </div>
      <%= form_tag(url_for(action: 'create'), class: "upload-form") do %>
      <div class="row">
        <div class="col-xs-6">
          <div class="form-group">
          <%= label_tag(:title, "Title:") %>
          <%= text_field_tag(:title, nil, class: 'form-control', required: true) %>
          </div>

          <div class="form-group">
          <%= label_tag(:description, "Description:") %>
          <%= text_area_tag(:description, nil, class: 'form-control', required: true) %>
          </div>

          <div class="form-group">
          <%= label_tag(:username, "Name:") %>
          <%= text_field_tag(:username, nil, class: 'form-control') %>
          </div>

          <div class="form-group">
          <%= label_tag(:email, "Email:") %>
          <%= text_field_tag(:email, nil, class: 'form-control') %>
          </div>
        </div>

        <div class="col-xs-6">
          <%= react_component('AddTags', type: 'materials', editable: true) %>
        </div>

        <div class="col-xs-6">
          <%= react_component('AddTags', type: 'bits', editable: false) %>
        </div>
      </div>

      <div class="form-group">
      <%= submit_tag("Upload", class: "btn btn-primary") %>
      <%= link_to "Back", inventions_url, class: "btn btn-default pull-right" %>
      </div>
    <% end %>
</div>